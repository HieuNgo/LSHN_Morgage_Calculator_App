<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/purchasePriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/purchasePrice"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/downPaymentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/downPayment"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/interrestRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/interestRate"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/loanDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/loanAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/loanAmount"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/monthly10LoanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/monthlyLoan10"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/monthy20LoanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/monthlyLoan20"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/monthy30LoanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/monthlyLoan30"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/monthyLoanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="@string/monthlyLoan"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/loanAmountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_text_view" />

    <TextView
        android:id="@+id/monthy10LoanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_text_view" />

    <TextView
        android:id="@+id/monthy20LoanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_text_view" />

    <TextView
        android:id="@+id/monthy30LoanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_text_view" />

    <TextView
        android:id="@+id/monthyLoanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:background="@drawable/bounding_box_text_view" />

    <EditText
        android:id="@+id/purchasePriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_edit_text"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/downPaymentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_edit_text"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/interestRateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/bounding_box_edit_text"
        android:ems="10"
        android:inputType="textPersonName" />

    <SeekBar
        android:id="@+id/loanDurationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="3"
        android:layout_column="1"
        android:max="30"
        android:progress="10" />

    <TextView
        android:id="@+id/purchasePriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="1" />

    <TextView
        android:id="@+id/downPaymentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="1" />

    <TextView
        android:id="@+id/interestRateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="11"
        android:layout_column="1" />

</GridLayout>